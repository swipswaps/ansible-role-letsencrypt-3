apache_mods_enabled:
  - ssl.load

apache_vhosts_ssl:
  - servername: "test.com"
    serveralias: "localhost"
    certificate_file: /etc/letsencrypt/live/test.com/cert.pem
    certificate_chain_file: /etc/letsencrypt/live/test.com/chain.pem
    certificate_key_file: /etc/letsencrypt/live/test.com/privkey.pem
    documentroot: "/var/www/html"

  - servername: "test-my-domain.com"
    serveralias: "localhost"
    certificate_file: /etc/letsencrypt/live/test-my-domain.com/cert.pem
    certificate_chain_file: /etc/letsencrypt/live/test-my-domain.com/chain.pem
    certificate_key_file: /etc/letsencrypt/live/test-my-domain.com/privkey.pem
    documentroot: "/var/www/html"

le_hosts_ssl: "{{ apache_vhosts_ssl }}"
