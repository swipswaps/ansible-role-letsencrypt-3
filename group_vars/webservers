ansible_python_interpreter: "/usr/bin/python3"

apache_mods_enabled:
  - ssl.load

apache_vhosts_ssl:
  - servername: "test.com"
    serveralias: "localhost"
    certificate_file: /etc/letsencrypt/live/test.com/cert.pem
    certificate_chain_file: /etc/letsencrypt/live/test.com/chain.pem
    certificate_key_file: /etc/letsencrypt/live/test.com/privkey.pem
    documentroot: "/var/www/html"

  - servername: "test2.com"
    serveralias: "localhost"
    certificate_file: /etc/letsencrypt/live/test2.com/cert.pem
    certificate_chain_file: /etc/letsencrypt/live/test2.com/chain.pem
    certificate_key_file: /etc/letsencrypt/live/test2.com/privkey.pem
    documentroot: "/var/www/html"

